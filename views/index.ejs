<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div class="wrapper">
      <form action="/" method="post" class="board-form">
        TITLE: <input type="text" name="title" class="input" required><br>
        <br>
        <button type="submit" class="submit">Create Board</button>
      </form>
      
      <ul class="main-list">
        <% boardList.forEach(function(boardItem) { %>
        <li class="main-list__item">
          <div class="board">
            <p class="board__title"><%= boardItem.title %></p>
            <p class="board_date"><%= boardItem.created_at %></p>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>

  </body>
</html>
